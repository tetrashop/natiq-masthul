# تنظیمات سرور
PORT=3000
NODE_ENV=production

# Gmail API - دریافت از Google Cloud Console
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=https://your-domain.vercel.app/auth/callback

# سرویس NLP
NLP_ENDPOINT=https://your-nlp-service.vercel.app

# امنیت
JWT_SECRET=your_super_secure_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# تنظیمات اختیاری
LOG_LEVEL=info
MAX_EMAILS_PER_REQUEST=20
KNOWLEDGE_RETENTION_DAYS=90
