  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "wrangler": "^4.50.0",
    "esbuild": "^0.25.4"
  }
}
